    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++.exe - 生成和调试活动文件",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\run.exe",//exe路径的选择
            "args": [],
            "stopAtEntry": false,
            // "cwd": "C:/mingw64\\bin",
            "cwd": "${workspaceFolder}",
            
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/mingw64\\bin\\gdb.exe",//调试器路径的选择
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
           "preLaunchTask": "C/C++: g++.exe 生成活动文件"
        }
    ]
